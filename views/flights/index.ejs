<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <title>List of Flights</title>
</head>
<body>
     <ul class= 'nav'>
        <li><a href='/flights'>Your Flights</a></li> 
        <li><a href='/flights/new'>Schedule A New Flight</a></li>
    </ul>
    <h1>Flight List</h1>
        <table>
            <thead>
                <tr>
                    <th>Airport</th>
                    <th>Airline</th>
                    <th>Flight Number</th>
                    <th>Departs</th>
                    <th>Details</th>
                </tr>
            </thead>
            <tbody>
                <% flights.forEach(function(f) { %>
                    <tr>
                        <td><%= f.airport %></td>
                        <td><%= f.airline %></td>
                        <td><%= f.flightNo %></td>
                        <td><%= f.departs %></td>
                        <td><a href="/flights/<%= f._id %>">Details</a></td>
                    </tr> 
                <% }); %>
            </tbody>
        </table>
       </body>
</html>